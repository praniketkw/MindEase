# Production Environment Configuration for MindEase Backend

# Node Environment
NODE_ENV=production
PORT=80

# Azure OpenAI Service Configuration
AZURE_OPENAI_ENDPOINT=${AZURE_OPENAI_ENDPOINT}
AZURE_OPENAI_API_KEY=${AZURE_OPENAI_API_KEY}
AZURE_OPENAI_DEPLOYMENT_NAME=${AZURE_OPENAI_DEPLOYMENT_NAME}
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure AI Language Service Configuration
AZURE_LANGUAGE_ENDPOINT=${AZURE_LANGUAGE_ENDPOINT}
AZURE_LANGUAGE_API_KEY=${AZURE_LANGUAGE_API_KEY}

# Azure Content Safety Service Configuration
AZURE_CONTENT_SAFETY_ENDPOINT=${AZURE_CONTENT_SAFETY_ENDPOINT}
AZURE_CONTENT_SAFETY_API_KEY=${AZURE_CONTENT_SAFETY_API_KEY}

# Azure Speech Service Configuration
AZURE_SPEECH_KEY=${AZURE_SPEECH_KEY}
AZURE_SPEECH_REGION=${AZURE_SPEECH_REGION}

# Security Configuration
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}
DATABASE_ENCRYPTION_KEY=${DATABASE_ENCRYPTION_KEY}

# Database Configuration
DATABASE_PATH=/tmp/mindease.db
DATABASE_BACKUP_PATH=/tmp/backups

# Application Configuration
CORS_ORIGIN=https://mindease-app.azurestaticapps.net
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_TIMEOUT_MS=3600000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Crisis Resources Configuration
CRISIS_HOTLINE_US=988
CRISIS_HOTLINE_INTERNATIONAL=+1-800-273-8255
UNIVERSITY_COUNSELING_URL=https://www.counseling.university.edu